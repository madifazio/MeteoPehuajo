extends layout

block content
  #weather
    img(src='http://openweathermap.org/img/w/' + datos.weather[0].icon + '.png')
    p #{datos.weather[0].description}
  #medidas
    #temperatura
      p Temperatura
      .medida
        p #{datos.main.temp} °C
    #presion
      p Presión (hpa)
      .medida
        p #{datos.main.pressure}
    #humedad
      p Humedad
      .medida 
        p #{datos.main.humidity} %
    #precipitacion
      p Lluvia ultimas 3hs
      .medida 
        if (datos.rain) 
          p #{datos.rain['3h']} mm
        else
          p 0 mm
