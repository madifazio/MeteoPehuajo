extends layout

block content
  p Actualizado #{datos.dt}
  #medidas
    #weather.med
      .circle
        img(src='http://openweathermap.org/img/w/' + datos.weather[0].icon + '.png')
      .medida
        p #{datos.weather[0].description}
    #temperatura.med
      .circle
        img(src='./images/termometro.png')
      .medida
        p #{datos.main.temp} Â°C
    #presion.med
      .circle
        img(src='./images/presion.png')
      .medida
        p #{datos.main.pressure} hPa
    #humedad.med
      .circle
        img(src='./images/humedad.png')
      .medida 
        p #{datos.main.humidity} %
    #precipitacion.med
      .circle
        img(src='./images/lluvia.png')
      .medida 
        if (datos.rain) 
          p #{datos.rain['3h']} mm
        else
          p Diaria
            span 0 mm
          p.p1 Mensual
            span 10 mm
          p.p1 Anual
            span 150 mm
    #viento.med
      .circle
        img(src='./images/humedad.png')
      .medida 
        p #{datos.main.humidity} %
