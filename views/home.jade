extends layout

block content
  p Actualizado #{datos.weather.dt}
  #medidas
    #weather.med
      .circle
        img(src='http://openweathermap.org/img/w/' + datos.weather.weather[0].icon + '.png')
      .medida
        p #{datos.weather.weather[0].description}
    #temperatura.med
      .circle
        img(src='./images/termometro.png')
      .medida
        p #{datos.weather.main.temp} °C
    #presion.med
      .circle
        img(src='./images/presion.png')
      .medida
        p #{datos.weather.main.pressure} hPa
    #humedad.med
      .circle
        img(src='./images/humedad.png')
      .medida 
        p #{datos.weather.main.humidity} %
    #precipitacion.med
      .circle
        img(src='./images/lluvia.png')
      .medida 
        if (datos.weather.rain) 
          p #{datos.weather.rain['3h']} mm
        else
          p Diaria
            span 0 mm
          p.p1 Mensual
            span 10 mm
          p.p1 Anual
            span 150 mm
    #viento.med
      .circle
        img(src='./images/humedad.png')
      .medida 
        p #{datos.weather.main.humidity} %
  #graficos graficos  
  #pronosticoExtendido 
    each fc in datos.forecast.list
      .extendido
        em #{fc.fecha.diaSem}
        p #{fc.fecha.dia}/#{fc.fecha.mes}
        p hora: #{fc.fecha.hora}
        img(src='http://openweathermap.org/img/w/' + fc.weather[0].icon + '.png')
        p #{fc.weather[0].description}
        p #{fc.main.temp} °C
        p #{fc.main.pressure} hpa
        p #{fc.main.humidity} %
